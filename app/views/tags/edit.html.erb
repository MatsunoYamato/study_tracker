<%# タグ編集画面 %>
<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">タグを編集</h1>
      <p class="text-gray-600">「<%= @tag.name %>」タグの設定を変更します</p>
    </div>

    <%= render 'form', tag: @tag %>

    <div class="mt-6 text-center space-x-4">
      <%= link_to "詳細を見る", @tag, 
                  class: "text-blue-600 hover:text-blue-800 transition-colors" %>
      <span class="text-gray-400">•</span>
      <%= link_to "タグ一覧に戻る", tags_path, 
                  class: "text-blue-600 hover:text-blue-800 transition-colors" %>
    </div>
  </div>
</div>