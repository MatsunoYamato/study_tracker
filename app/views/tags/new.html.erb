<%# タグ新規作成画面 %>
<div class="container mx-auto px-4 py-8">
    <div class="max-w-2xl mx-auto">
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-white mb-2">新しいタグを作成</h1>
            <p class="text-gray-400">学習内容を分類するためのタグを作成します</p>
        </div>

        <%= render 'form', tag: @tag %>

        <div class="mt-6 text-center">
            <%= link_to "タグ一覧に戻る", tags_path, 
                  class: "text-blue-600 hover:text-blue-800 transition-colors" %>
        </div>
    </div>
</div>