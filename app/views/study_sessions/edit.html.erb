<%# 学習記録編集画面 %>
<div class="container mx-auto px-4 py-8">
    <div class="max-w-2xl mx-auto">
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900 mb-2">学習記録を編集</h1>
            <p class="text-gray-600">
                <%= @study_session.studied_at.strftime("%Y年%m月%d日 %H:%M") %>の記録を編集します
            </p>
        </div>

        <%= render 'form', study_session: @study_session %>

        <div class="mt-6 text-center space-x-4">
            <%= link_to "詳細を見る", @study_session, 

                  class: "text-blue-600 hover:text-blue-800 transition-colors" %>
            <span class="text-gray-400">•</span>
            <%= link_to "一覧に戻る", study_sessions_path, 
                  class: "text-blue-600 hover:text-blue-800 transition-colors" %>
        </div>
    </div>
</div>