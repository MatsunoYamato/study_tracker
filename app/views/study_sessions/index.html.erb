<%# 学習記録一覧画面 %>
<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900">学習記録一覧</h1>
    <div class="flex space-x-4">
      <%= link_to "記録を追加", new_study_session_path, 
                  class: "bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-lg transition-colors" %>
      <%= link_to "ダッシュボード", dashboard_path, 
                  class: "bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded-lg transition-colors" %>
    </div>
  </div>

  <% if @study_sessions.any? %>
    <div class="bg-white rounded-lg shadow-md overflow-hidden">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                学習日時
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                学習時間
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                タグ
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                メモ
              </th>
              <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                操作
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @study_sessions.each do |session| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-medium text-gray-900">
                    <%= session.studied_at.strftime("%Y/%m/%d") %>
                  </div>
                  <div class="text-sm text-gray-500">
                    <%= session.studied_at.strftime("%H:%M") %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-medium text-gray-900">
                    <%= session.duration_in_hours %>時間
                  </div>
                  <div class="text-sm text-gray-500">
                    (<%= session.duration %>分)
                  </div>
                </td>
                <td class="px-6 py-4">
                  <div class="flex flex-wrap gap-2">
                    <% session.tags.each do |tag| %>
                      <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium" 
                            style="background-color: <%= tag.color %>20; color: <%= tag.color %>;">
                        <%= tag.name %>
                      </span>
                    <% end %>
                  </div>
                </td>
                <td class="px-6 py-4">
                  <div class="text-sm text-gray-900 max-w-xs truncate">
                    <%= session.note.presence || "メモなし" %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <div class="flex justify-end space-x-2">
                    <%= link_to "詳細", session, 
                                class: "text-blue-600 hover:text-blue-800 transition-colors" %>
                    <%= link_to "編集", edit_study_session_path(session), 
                                class: "text-green-600 hover:text-green-800 transition-colors" %>
                    <%= link_to "削除", session, 
                                method: :delete, 
                                data: { confirm: "本当に削除しますか？" },
                                class: "text-red-600 hover:text-red-800 transition-colors" %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <%# ページネーション（Pagyが利用可能な場合） %>
    <% if defined?(Pagy) && @pagy %>
      <div class="mt-6 flex justify-center">
        <%== pagy_nav(@pagy) %>
      </div>
    <% end %>
  <% else %>
    <div class="bg-white rounded-lg shadow-md p-8 text-center">
      <div class="mb-6">
        <svg class="w-16 h-16 mx-auto text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>
        </svg>
      </div>
      <h3 class="text-lg font-medium text-gray-900 mb-2">学習記録がありません</h3>
      <p class="text-gray-600 mb-6">最初の学習記録を作成して、学習の進捗を追跡しましょう！</p>
      <%= link_to "学習記録を作成", new_study_session_path, 
                  class: "bg-blue-500 hover:bg-blue-600 text-white px-6 py-3 rounded-lg font-semibold transition-colors" %>
    </div>
  <% end %>
</div>