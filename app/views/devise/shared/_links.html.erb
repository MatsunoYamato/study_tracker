<%# スタイリングされたDeviseリンク %>
<div class="space-y-2">
  <%- if controller_name != 'sessions' %>
    <%= link_to "ログイン", new_session_path(resource_name), 
                class: "text-blue-600 hover:text-blue-800 transition-colors" %>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "新規登録", new_registration_path(resource_name), 
                class: "text-blue-600 hover:text-blue-800 transition-colors" %>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <div class="mt-4">
      <%= link_to "パスワードを忘れた場合", new_password_path(resource_name), 
                  class: "text-sm text-gray-600 hover:text-gray-800 transition-colors" %>
    </div>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <div class="mt-2">
      <%= link_to "確認メールを再送信", new_confirmation_path(resource_name), 
                  class: "text-sm text-gray-600 hover:text-gray-800 transition-colors" %>
    </div>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <div class="mt-2">
      <%= link_to "アカウントのロック解除", new_unlock_path(resource_name), 
                  class: "text-sm text-gray-600 hover:text-gray-800 transition-colors" %>
    </div>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <div class="mt-4 pt-4 border-t border-gray-200">
      <%- resource_class.omniauth_providers.each do |provider| %>
        <%= button_to "#{OmniAuth::Utils.camelize(provider)}でログイン", 
                      omniauth_authorize_path(resource_name, provider), 
                      data: { turbo: false }, 
                      class: "w-full bg-gray-100 hover:bg-gray-200 text-gray-800 py-2 px-4 rounded-lg transition-colors mb-2" %>
      <% end %>
    </div>
  <% end %>
</div>
