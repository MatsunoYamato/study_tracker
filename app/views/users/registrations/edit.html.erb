  function updateSelection() {
    profileImageRadios.forEach(radio => {
      const border = radio.parentElement.querySelector('.radio-border');
      if (radio.checked) {
        border.classList.add('border-blue-500');
        border.classList.remove('border-transparent');
      } else {
        border.classList.remove('border-blue-500');
        border.classList.add('border-transparent');
      }
    });
  }
  
  // ãƒ—ãƒ¬ãƒ“ãƒ¥ãƒ¼æ›´æ–°
  function updatePreview(value) {
    const container = currentProfileImage.querySelector('div') || currentProfileImage;
    
    if (value === '') {
      // ãƒ‡ãƒ•ã‚©ãƒ«ãƒˆç”»åƒ
      container.innerHTML = `
        <svg class="w-8 h-8 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
        </svg>
      `;
      container.className = 'w-16 h-16 bg-gray-300 rounded-full flex items-center justify-center';
    } else if (value.match(/^\p{Emoji}+$/u)) {
      // çµµæ–‡å­—
      container.innerHTML = value;
      container.className = 'w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center text-2xl';
    } else {
      // ã‚«ã‚¹ã‚¿ãƒ ç”»åƒURLï¼ˆå°†æ¥ã®æ‹¡å¼µç”¨ï¼‰
      container.innerHTML = '';
      container.className = 'w-16 h-16 rounded-full bg-center bg-cover';
      container.style.backgroundImage = `url('${value}')`;
    }
  }
  
  // ãƒ©ã‚¸ã‚ªãƒœã‚¿ãƒ³ã®ã‚¤ãƒ™ãƒ³ãƒˆãƒªã‚¹ãƒŠãƒ¼
  profileImageRadios.forEach(radio => {
    radio.addEventListener('change', function() {
      if (this.checked) {
        updatePreview(this.value);
        updateSelection();
      }
    });
  });
  
  // åˆæœŸçŠ¶æ…‹ã®è¨­å®š
  updateSelection();
});
</script>

